<script>
$(document).on('click', '.hotspot-btn', function(e) {
  e.stopPropagation(); // Button click par document ka click event na chale
  
  // Sabse pehle clicked button ka content dhoondo
  var closestBox = $(this).closest('[class^="hotspot-box-"]');
  var hotspotContent = closestBox.find('.hotspot-content');
  
  // Ab toggle function use karo active class ko add/remove karne ke liye
  hotspotContent.toggleClass('active');
  $(this).toggleClass('active');
});

// Document par click listener lagao jo active class remove kar de
$(document).on('click', function() {
  $('.hotspot-content').removeClass('active');
  $('.hotspot-btn').removeClass('active');
});
</script>
