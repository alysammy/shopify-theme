<div class="follow-us" style="background-color:{{ section.settings.section_background_color }};">
  {% if section.settings.border_image %}
    <div class="border-image">
      <img src="{{ section.settings.border_image | img_url: 'master' }}" alt="">
    </div>
  {% endif %}
  <div class="container">
    <div class="heading">
      <div class="main-heading">
        <h2 style="color:{{ section.settings.heading_text_color }};">{{ section.settings.heading_text }}</h2>
        <div class="site-btn">
          <a href="{{ section.settings.tiktok_url }}">{{ section.settings.tiktok_text }}</a>
          <a href="{{ section.settings.instagram_url }}">{{ section.settings.instagram_text }}</a>
        </div>
      </div>
    </div>
    <div class="row">
      {% for block in section.blocks %}
        <div class="col-md-4">
         <a href="{{ block.settings.soacl_link }}">
           <div class="card">
            {% if block.settings.card_image %}
              <div class="card-image">
                <img
                  class="card-img"
                  src="{{ block.settings.card_image | img_url: 'master' }}"
                  alt="{{ block.settings.card_image_alt }}"
                >
              </div>
            {% endif %}
            <div class="card-img-overlay">
              <div class="icon">
                {% if block.settings.icon_image %}
                  <img
                    src="{{ block.settings.icon_image | img_url: '200x' }}"
                    alt="{{ block.settings.icon_image_alt }}"
                  >
                {% endif %}
              </div>
            </div>
          </div>
         </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

