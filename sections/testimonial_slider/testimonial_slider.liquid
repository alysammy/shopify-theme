<div class="the-review" style="padding-top:{{ section.settings.padding_top }}px; padding-bottom:{{ section.settings.padding_bottom }}px;">
  <div class="border-image">
    {% if section.settings.border_image %}
      <img src="{{ section.settings.border_image | img_url: 'master' }}" alt="">
    {% endif %}
  </div>
  <div class="container-fluid">
    <div class="heading">
      <h3 style="color:{{ section.settings.heading_color }};">{{ section.settings.main_heading }}</h3>
      <p style="color:{{ section.settings.sub_heading_color }};}">{{ section.settings.sub_heading }}</p>
    </div>
    <div class="row slider">
      {% assign slider-card = section.blocks | where: 'type', 'images' %}
      {% for card in slider-card %}
        <div class="col">
          <div class="slider-card">
            <div class="card" style="background-color:{{ card.settings.card_background_color }};">
              {% if card.settings.add_image %}
                <img src="{{ card.settings.add_image | img_url: "200x" }}" alt="">
              {% endif %}
              <div class="star">
                <a href="#">
                  <i class="fa-solid fa-star"></i>
                </a>
                <a href="#">
                  <i class="fa-solid fa-star"></i>
                </a>
                <a href="#">
                  <i class="fa-solid fa-star"></i>
                </a>
                <a href="#">
                  <i class="fa-solid fa-star"></i>
                </a>
                <a href="#">
                  <i class="fa-solid fa-star"></i>
                </a>
              </div>
              <div class="text">
                <p style="color:{{ card.settings.text_color }};">{{ card.settings.add_card_text }}</p>
              </div>
              <div class="sub-text">
                <h5 style="color:{{ card.settings.text_color }};">{{ card.settings.add_card_sub_text }}</h5>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  <!--
    <div class="site-btn">  <a href="{{ section.settings.site_btn_url }}" style="color:{{ section.settings.site_btn_color }};">
    {{- section.settings.site_btn_text -}}
    </a>
    </div>
  -->
  </div>
</div>

