                {% elsif block.type == "subheading" %}
                    {% if block.settings.subheading != blank %}
                      <div class="shm-subheading-box shm-subheading-box-{{ forloop.index }}">
                          <span class="shm-subheading">{{ block.settings.subheading }}</span>
                      </div>
                    {% endif %}
              <!-- start text -->
                {% elsif block.type == "text" %}
                    {% if block.settings.detail != blank %}
                      <div class="shm-detail-box shm-detail-box-{{ forloop.index }}">
                          <div class="shm-detail">
                              <p>{{ block.settings.detail }}</p>
                          </div>
                      </div>
                    {% endif %}
              <!-- start button -->
                {% elsif block.type == "button" %}
                    {% if button_open == false %}
                        <div class="shm-btn-wrapper shm-btn-wrapper-{{ forloop.index }}">
                        {% assign button_open = true %}
                    {% endif %}
                    {% if block.settings.btn != blank %}
                      <a href="{{ block.settings.btn-link }}" class="shm-btn shm-btn-{{ forloop.index }}">{{ block.settings.btn }}</a>
                    {% endif %}
                {% else %}
                    {% if button_open == true %}
                        </div> <!-- Close .shm-btn-wrapper -->
                        {% assign button_open = false %}
