                </div> <!-- Close .shm-btn-wrapper at the end if open -->
            {% endif %}
          </div>
        </div>
        <!-- End Video Content -->
      </div>
      <!-- start swiper slider -->
      <div class="custom-slider custom-slider-desktop">
        <div class="custom-slider-content">
          
