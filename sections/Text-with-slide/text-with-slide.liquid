{% style %}
  .img-with-slide {
    padding: 100px 0;
}
.img-with-slide .row {
    display: flex;
     align-items: center;
}
.img-with-slide .col-left {
    width: 45%;
}
.img-with-slide .col-right {
    width: 55%;
}
 .img-with-slide .container {
    width: 100%;
    max-width: 1300px;
    margin: auto;
}
  .img-with-slide  .site-btn a {
    text-transform: uppercase;
    background-color: pink;
    padding: 7px 20px;
    display: inline-block;
    box-shadow: 0px 4px 8px -3px #000;
    border-radius: 20px;
    transition: all 0.3s ease-in-out;
   text-decoration: none;
}
 .img-with-slide .site-btn a:hover {
    box-shadow: 0px 9px 12px -4px #000;
    transform: scale(1.05);
}
     .img-with-slide p {
    font-size: 15px;
}
 .img-with-slide h2 {
    font-size: 50px;
    text-transform: uppercase;
    margin: 0;
}
 .img-with-slide span {
    text-transform: capitalize;
    font-size: 23px;
    font-style: italic;
}
.img-with-slide .slider-img {
    display: flex;
    gap: 25px;
}
   .img-with-slide  .col-slider {
    text-align: center;
}
.img-with-slide .img-text {
    background-color: #fff;
    padding: 20px;
    display: block;
    width: 100%;
    position: relative;
    z-index: 999;
    max-width: 306px;
    box-shadow: 0px 3px 9px -7px #000;
    border-radius: 0 0 15px 15px;
    margin: -66px auto 0;
    bottom: 0;
}
   .img-with-slide .col-slider {
    width: 50%;
}
    .img-with-slide .img-with-heading .img img {
    width: 100%;
    object-fit: cover;
    height: auto;
}
    .img-with-slide .img {
    height: 100%;
    width: 100%;
    position: relative;
    padding-bottom: 113%;
}
     .img-with-slide .img-with-heading .img img {
    width: 100%;
    object-fit: cover;
    height: auto;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: 100%;
}
.img-with-slide .img-with-heading {
    margin: 0 15px;
    padding-bottom: 30px;
}
 .img-with-slide .slick-prev:before {
    content: "\f053";
    font-family: "Font Awesome 5 Pro"  !important;
    color: #000;
}
 .img-with-slide .slick-next:before {
    content: "\f054";
    font-family: "Font Awesome 5 Pro" !important;
    color: #000;
}
 .img-with-slide .slick-next:before, .slick-prev:before {
    font-family: slick;
    font-size: 20px;
    line-height: 1;
    opacity: .75;
       color: #000;
    font-size: 30px !important;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}
@media(max-width:1354px) {
    .img-with-slide .container {
        padding: 0 39px 0 35px;
    }
}
@media(max-width:1027px) {
  .img-with-slide .row {
    flex-direction: column;
}
.img-with-slide .col-left {
    width: 100%;
}
 .img-with-slide .col-left {
    width: 100%;
}
.img-with-slide .col-right {
    width: 100%;
}
    .img-with-slide .col-right {
        width: 85%;
        margin-top: 35px;
    }
 .img-with-slide .heading {
    text-align: center;
}
}
@media(max-width:494px) {
  .img-with-slide h2 {
    font-size: 40px;
    text-transform: uppercase;
    margin: 0;
}
 .img-with-slide span {
    text-transform: capitalize;
    font-size: 18px;
    font-style: italic;
}
}
@media(max-width:409px) {
      .img-with-slide h2 {
        font-size: 30px;
        text-transform: uppercase;
        margin: 0;
    }
      .img-with-slide span {
        text-transform: capitalize;
        font-size: 16px;
        font-style: italic;
    }
.img-with-slide .slick-next:before, .slick-prev:before {
    font-family: slick;
    font-size: 20px;
    line-height: 1;
    opacity: .75;
    color: #000;
    font-size: 20px !important;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}
}
@media(max-width:326px) {
      .img-with-slide h2 {
        font-size: 27px;
        text-transform: uppercase;
        margin: 0;
    }
}
{% endstyle %}
<div class="img-with-slide">
  <div class="container">
    <div class="row">
      <div class="col-left">
        <div class="heading">
          <span style="color: {{ section.settings.span_color }};">
            {{ section.settings.span_text }}
          </span>
          <h2 style="color: {{ section.settings.h2_color }};">
            {{ section.settings.heading_text }}
          </h2>
          <!-- <div class="site-btn">
            <a href="{{ section.settings.button_link }}" style="color: {{ section.settings.btn_text_color }}; background-color: {{ section.settings.btn_bg_color }};">
              {{ section.settings.button_text }}
            </a>
          </div> -->
        </div>
      </div>
      <div class="col-right">
        <div class="slider-img custom-slider">
          {% for block in section.blocks %}
            <div class="col-slider">
              <div class="img-with-heading">
                  <div class="img">
                          <img src="{{ block.settings.image | img_url: '400x' }}" alt="">
                  </div>
                <div class="img-text">
                  <h4>{{ block.settings.img_text }}</h4>
                  <div class="site-btn">
                    <a href="{{ block.settings.img_btn_link }}" style="color: {{ block.settings.img_btn_text_color }}; background-color: {{ block.settings.img_btn_bg_color }};">
                      {{ block.settings.img_btn_text }}
                    </a>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Image with Slide Section",
  "settings": [
    {
      "type": "text",
      "id": "span_text",
      "label": "Span Text",
      "default": "Default Span"
    },
    {
      "type": "color",
      "id": "span_color",
      "label": "Span Text Color",
      "default": "#000000"
    },
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "Default Heading"
    },
    {
      "type": "color",
      "id": "h2_color",
      "label": "Heading Text Color",
      "default": "#000000"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Click Me"
    },
    {
      "type": "color",
      "id": "btn_text_color",
      "label": "Button Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "btn_bg_color",
      "label": "Button Background Color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Image Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "img_text",
          "label": "Image Text",
          "default": "Default Image Text"
        },
        {
          "type": "url",
          "id": "img_btn_link",
          "label": "Image Button Link",
        },
        {
          "type": "text",
          "id": "img_btn_text",
          "label": "Image Button Text",
          "default": "Learn More"
        },
        {
          "type": "color",
          "id": "img_btn_text_color",
          "label": "Image Button Text Color",
          "default": "#FFFFFF"
        },
        {
          "type": "color",
          "id": "img_btn_bg_color",
          "label": "Image Button Background Color",
          "default": "#000000"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image with Slide Section",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
