<div class="follow-us three-flavors" style="background-color:{{ section.settings.section_background_color }};">
  <div class="border-image">
    {% if section.settings.border_image %}
      <img src="{{ section.settings.border_image | img_url: 'master' }}" alt="">
    {% endif %}
  </div>
  <div class="container">
    <div class="heading">
      <div class="main-heading">
        <h2 style="color:{{ section.settings.heading_text_color }};">{{ section.settings.heading_text }}</h2>
        <p style="color:{{ section.settings.p_color }};">{{ section.settings.p_text }}</p>
      </div>
    </div>
    <div class="row">
      {% for block in section.blocks %}
        <div class="col-md-4">
          <a href="{{ block.settings.card_Url }}">
            <div class="card">
              {% if block.settings.card_image %}
                <div class="card-image">
                  {% if block.settings.card_image %}
                    <img
                      class="card-img product_image"
                      src="{{ block.settings.card_image | img_url: 'master' }}"
                      alt="">
                  {% endif %}
                  {% if block.settings.card_hover_image %}
                    <img
                      class="img_hover"
                      src="{{ block.settings.card_hover_image | img_url: 'master' }}"
                      alt="">
                  {% endif %}
                </div>
              {% endif %}
              <div class="card-body">
                <h3 style="color:{{ block.settings.card_text_color }};">{{ block.settings.card_text }}</h3>
              </div>
            </div>
          </a>
        </div>
      {% endfor %}
    </div>
    <div class="site-btn">
      <a href="{{ section.settings.button_url }}">{{ section.settings.button_text }}</a>
    </div>
  </div>
</div>


