{% style %}
  .follow-us {
    margin: 50px 0
  }

  .three-flavors .card-image .product_image {
    transform: rotate(95deg);
  }

  .follow-us.three-flavors p {
    font-size: 25px;
  }

  .border-image {

    height: 73px;

  }
  .border-image img {
    width: 100%;
    height: 100%;
    display: block;
  }

  .follow-us .heading {
    text-align: center;
  }
  .follow-us h2 {
    text-transform: uppercase;
    font-size: 60px;
    font-weight: 500;
  }
  .three-flavors .site-btn a {
    background-color: #FF9900;
    color: #fff;
  }
  .three-flavors .site-btn a:hover {
    background-color: #000;
    color: #fff;
  }

  .three-flavors .site-btn {
    text-align: center;
  }

  .three-flavors .card {
    position: relative;
    display: flex;
    flex-direction: column;
    min-width: 0;
    word-wrap: break-word;
    background-color: transparent !important;
    background-clip: border-box;
    border: none;
    text-align: center;
    border-radius: 0.25rem;
  }

  .follow-us .card-image {
    position: relative;
    padding-bottom: 110%;
  }

  .follow-us .card-image img {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .three-flavors .card .img_hover {
    opacity: 0;
    transition: all 0.4s linear;
  }
  .three-flavors .card:hover .img_hover {
    opacity: 1;
    transition: all 0.4s linear;
    animation: bouns infinite 2s ease-in-out;
  }
  .three-flavors .card:hover .product_image {
    opacity: 0;
    transition: all 0.4s linear;
  }

  @keyframes bouns {
    0% {}
  50% {
    transform: translateY(-5%);
  }
  100% {}
}

@media(max-width: 992px) {
  .follow-us h2 {
    text-transform: uppercase;
    font-size: 46px !important;
    font-weight: 500;
  }

  .three-flavors .card h3 {
    font-size: 20px;
  }

}

@media(max-width: 768px) {
  .follow-us {
    margin: 25px 0
  }
  .follow-us h2 {
    text-transform: uppercase;
    font-size: 37px !important;
    font-weight: 500;
  }
}
{% endstyle %}

